    <!-- JavaScript for Form Handling -->
    <script>
        function handleSubmit(event) {
            event.preventDefault();
            
            // --- IMPORTANT: REPLACE THIS PLACEHOLDER WITH YOUR ACTUAL EMAIL ADDRESS ---
            const targetEmail = 'your.email@example.com'; 
            // --------------------------------------------------------------------------

            const name = document.getElementById('name').value;
            const userEmail = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const projectDetails = document.getElementById('project').value;
            const messageBox = document.getElementById('message-box');
            
            messageBox.style.display = 'block';
            messageBox.classList.remove('text-red-600', 'text-green-600');

            if (name && userEmail && projectDetails) {
                // 1. Construct the email subject and body
                const subject = encodeURIComponent(`New Project Inquiry from ${name} (Cut N Roell Website)`);
                let body = `Name: ${name}\n`;
                body += `Email: ${userEmail}\n`;
                body += `Phone: ${phone || 'N/A'}\n\n`;
                body += `Project Details:\n${projectDetails}`;

                const mailtoLink = `mailto:${targetEmail}?subject=${subject}&body=${encodeURIComponent(body)}`;
                
                // 2. Open the user's mail client
                window.location.href = mailtoLink;

                // 3. Display success message on the page
                messageBox.classList.add('text-green-600');
                messageBox.innerHTML = `Success! Your email client should now be open to send the inquiry to ${targetEmail}.`;
                
                // Clear the form fields after successful attempt to open mail client
                event.target.reset();

            } else {
                messageBox.classList.add('text-red-600');
                messageBox.innerHTML = 'Please fill out your Name, Email, and Project Details.';
            }
        }
    </script>
